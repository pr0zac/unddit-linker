{
  "name": "reveddit linker",
  "short_name": "reveddit link",
  "description": "Jump between viewing content on reddit and reveddit.",
  "version": "0.0.0.8",
  "permissions": [
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.reddit.com/*",
    "https://*.reveddit.com/*"
  ],
  "icons": { "128": "icons/128.png",
    "48": "icons/48.png",
    "16": "icons/16.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png"
    },
    "default_title" : "View on re(ve)ddit"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://*.reveddit.com/*", "https://*.reddit.com/*"],
    "js": ["lib/jquery-3.2.1.min.js", "lib/arrive.js", "content.js"]
  }],
  "manifest_version": 3
}
